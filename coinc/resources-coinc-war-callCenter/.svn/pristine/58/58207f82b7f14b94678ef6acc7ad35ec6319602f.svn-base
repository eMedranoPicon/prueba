input[type="password"],input[type="search"],isindex,select {
	-webkit-appearance: textfield;
	padding: 1px;
	border: 2px inset;
	border-image: initial;
	-webkit-rtl-ordering: logical;
	-webkit-user-select: text;
	cursor: auto;
}

.Form input[type="text"],.Form input[type="password"],.Form textarea,.Form select
	{
	display: inline-block;
	box-sizing: border-box;
	-moz-box-sizing: border-box;
	-ms-box-sizing: border-box;
	-webkit-box-sizing: border-box;
	padding: 6px 12px;
	font-size: 18px;
	font-weight: 300;
	line-height: 1.4;
	color: #221919;
	border: 1px solid #A4A2A2;
	border-radius: 6px;
	-moz-border-radius: 6px;
	-webkit-border-radius: 6px;
	box-shadow: inset 0 1px rgba(34, 25, 25, 0.15), 0 1px
		rgba(255, 255, 255, 0.8);
	-moz-box-shadow: inset 0 1px rgba(34, 25, 25, 0.15), 0 1px
		rgba(255, 255, 255, 0.8);
	-webkit-box-shadow: inset 0 1px rgba(34, 25, 25, 0.15), 0 1px
		rgba(255, 255, 255, 0.8);
	-moz-transition: all 0.08s ease-in-out;
	-webkit-transition: all 0.08s ease-in-out;
}

.NukForm input[type="text"],.NukForm input[type="password"],.NukForm textarea,.NukForm select
	{
	position: relative;
	z-index: 3;
	display: block;
	width: 100%;
	border: 1px solid #A4A2A2;
	border-radius: 6px;
	-moz-border-radius: 6px;
	-webkit-border-radius: 6px;
	box-shadow: inset 0 1px rgba(34, 25, 25, 0.15), 0 1px
		rgba(255, 255, 255, 0.8);
	-moz-box-shadow: inset 0 1px rgba(34, 25, 25, 0.15), 0 1px
		rgba(255, 255, 255, 0.8);
	-webkit-box-shadow: inset 0 1px rgba(34, 25, 25, 0.15), 0 1px
		rgba(255, 255, 255, 0.8);
	-webkit-transition: all 0.08s ease-in-out;
	-moz-transition: all 0.08s ease-in-out;
}

.errors {
	background-color: rgba(255, 125, 13, 0.21);
}