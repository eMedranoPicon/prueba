.header {
    margin-bottom: 0;
    background: black;
    padding-bottom: 15px;
}
.topHeader {
    background: black;
}

.degradado_gris,
.fondo_negro_punteado{
	display: none;
}

input[type=text],
input[type=password],
input[type=email]{
	width: 100%;
    height: 35px;
    line-height: 35px;
    border: 1px solid #E0E0E0;
    border-radius: 4px;
    padding: 5px;
    margin-bottom: 15px;
}

.boton_registro{
	display: block;
	padding: 10px 70px;
	border-radius: 30px;
	font-size: 15px;
	border: none;
	margin: 0 auto;
	outline: none;
	margin-bottom: 20px;
}

.btn_cabcecera_correo_verificado_mobile{
    width: 230px;
    padding: 10px 20px;
    border-radius: 30px;
    margin: 0 auto;
    text-align: center;
    font-size: 20px;
}


.btn_verde{
	border: 1px solid #99b745;
    background-color: #99b745;
    color: white;
    float: left;
}

.boton_negro{
	background-color: black;
	color: white;
}

.cabecera_condiciones img{
    margin: 0 auto;
    display: block;
}

.titulo_condiciones{
	text-align: center;
	font-size: 20px;
	margin-top: 5px;
	margin-bottom: 20px;
}

.bordeado{
	background-color: white;
	border: 1px solid #CECECE;
	border-radius: 5px;
	margin-bottom: 20px;
	margin-top: 20px;
	text-align: center;
	padding: 30px;
	line-height: 30px;
}

.bordeado label{
	width: 100%;
}

.bordeado input{
	width: 100%;
}

.titulo_seccion{
	font-weight: bold;
    padding: 10px 15px;
}

.text_bold{
	font-weight: bold;
}

.fondo_verde{
	background-color: #99b745;
    margin-top: -51px;
}

.fondo_verde img{
	margin: 25px auto 15px auto;
    display: block;
}

.texto_container_verde{
	font-size: 18px;
	color: white;
	max-width: 400px;
	text-align: center;
	margin: 0 auto 20px auto;
}

.btn_correo_verificado_mobile_empezar{
	margin: 20px auto 0 auto;
	display:block;
	width:230px;
}

.ui-message-error {
    margin-top: -10px;
    background-image: url(../images/iconos/ico_error_barra2.png);
    background-repeat: no-repeat;
    padding-left: 27px;
    padding-right: 15px;
    background-size: 34px 34px;
    background-position: 0px 0px;
    background-color: #f9e6e5;
    border-radius: 15px;
    border: none;
    color: red;
}

input[type=text].input_error,
input[type=password].input_error,
select.input_error{
	border: 1px solid red;
}

@media (max-width: 767px){
	.header {
	    margin-bottom: 0;
	    background: none;
	    height: 65px;
	}
	.bordeado{
		margin: 0;
	}
}
